<erl>

out(A) ->
    Q = yaws_api:parse_query(A),
    dispatch(lkup("op", Q), A, Q).

dispatch("clickx", _, Q) ->
    send_back("/www/images/o.png", Q);
dispatch("clicko", _, Q) ->
    send_back("/www/images/x.png", Q);
dispatch("hello", _, Q) ->
    PID = gameclient:start(),
    Mat = gameserver:request_matrix(),
    gameserver:store(ID, PID),
    ID = io_lib:write(PID),
    return_json({struct, [{"mat", {array, Mat}}, {"id", ID}]}).

send_back(Image, Q) ->
    Id = lkup("id", Q),
    gameserver:send_update({Id, Image}),
    return_json({struct, [{"id", Id}, {"src", Image}]}).

lkup(Key, List) ->
    case lists:keysearch(Key, 1, List) of
    {value,{_,Value}} -> Value;
    _                 -> false
    end.

return_json(JSON) ->
    {content,
        "application/json; charset=iso-8859-1",
        json:encode_json(JSON)}.
</erl>
